.common-card {
  display: flex;
  align-items: center;
}

.common-card .card-title {
  padding: 10rpx;
  background: #294965;
  color: #fff;
  font-size: 34rpx;
  position: relative;
}

.common-card .card-line {
  background: #294965;
  height: 1px;
  flex: 1;
}

.head-img {
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #294965;
}

.info-td-img {
  text-align: center;
}

.info {
  padding: 0 20rpx;
  font-size: 30rpx;
}

.info .info-tr {
  padding: 10rpx 0;
  display: flex;
  align-items: center;
}

.info .info-td-left {
  width: 35%;
  margin-right: 10rpx;
}
.info .info-td-right {
  flex: 1;
}

.info-label {
  padding-right: 40rpx;
  display: inline-block;
  width: 100rpx;
  text-align: justify;
  text-align-last: justify;
  position: relative;
}

.info-label::after {
  content: ":";
  position: absolute;
  top: -.5px;
  right: 0;
  margin-right: 30rpx;
}