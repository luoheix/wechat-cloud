.simple {
  padding: 30rpx 30rpx 140rpx;
  font-size: 28rpx;
}

.simple-label {
  color: #999;
}

.simple-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 36rpx 26rpx 26rpx;
  box-shadow: 2px 2px 2px 0px rgba(184, 184, 184, 0.3);
  border: 1px solid rgba(248, 248, 248, 0.5);
  position: relative;
}

.simple-card:not(:first-child) {
  margin-top: 50rpx;
}

.simple-card-title {
  position: absolute;
  top: -16rpx;
  height: 48rpx;
  line-height: 48rpx;
  left: -10rpx;
  z-index: 9;
  background-color: rgba(30, 164, 221, 1);
  color: #fff;
  font-size: 26rpx;
  padding: 0 10rpx 0 14rpx;
  border-radius: 10rpx 10rpx 10rpx 10rpx;
}

.simple-card-title::after {
  content: "";
  width: 0px;
  height: 0px;
  border: solid transparent;
  border-left-color: rgba(30, 164, 221, 1);
  border-width: 24rpx;
  top: 0;
  right: -42rpx;
  position: absolute;
}

.education-item,
.skills-item,
.project-item,
.info-item,
.advantage-item,
.self-item,
.blog-item,
.work-item {
  padding: 10rpx 0;
}

/* .advantage-item {
  font-size: 28rpx;
} */

.work-item:not(:first-child) {
  margin-top: 20rpx;
}

.work-item>text {
  color: #999;
}

.work-item>view {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}

.education-item,
.project-item {
  display: flex;
  justify-content: space-between;
}

.blog-item {
  display: flex;
  align-items: center;
  color: #007aff;
}

.blog-item button {
  font-size: 28rpx;
  margin: 0;
}

.blog-item .blog-icon {
  width: 40rpx;
  height: 40rpx;
}

.blog-item .blog-url {
  margin: 0 24rpx;
}

.blog-copy {
  margin-top: -20rpx;
  font-size: 24rpx;
  color: #999;
  text-align: right;
}