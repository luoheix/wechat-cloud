.work-item:not(:first-child) {
  margin-top: 20rpx;
}

.work-item>text {
  color: #999;
}

.work-item>view {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}

.education-item,
.project-item {
  display: flex;
  justify-content: space-between;
}