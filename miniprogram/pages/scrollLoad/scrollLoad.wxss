.list {
  padding: 30rpx;
}

.list-item {
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #ddd;
}

.list-item:first-child {
  border-top: 1px solid #ddd;
}

.list-item-left {
  padding-right: 30rpx;
  font-size: 50rpx;
  position: relative;
}

.list-item-left::after {
  content: "";
  position: absolute;
  top: 0px;
  right: 0;
  height: 100%;
  width: 1px;
  background-color: #bbbbbb;
}

.list-item-right-top > text:not(:first-child) {
  margin-left: 20rpx;
}

.list-item-right {
  margin-left: 30rpx;
}